# 智慧管家环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# ============ AI 模型配置 ============
# GLM API 密钥（智谱AI）
GLM_API_KEY=your_glm_api_key_here
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
GLM_MODEL=glm-4

# ============ 数据库配置 ============
# 主数据库路径
DB_PATH=butler/data/butler.db
# 向量数据库路径
VECTOR_DB_PATH=butler/data/memory_vectors.db
# 数据库连接池大小
DB_POOL_SIZE=5

# ============ 日志配置 ============
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE=butler/logs/butler.log
# 日志文件最大大小 (MB)
LOG_MAX_SIZE=10
# 日志文件备份数量
LOG_BACKUP_COUNT=5

# ============ 服务配置 ============
# Web 服务端口
WEB_PORT=8000
# Web 服务地址 (0.0.0.0 表示监听所有接口)
WEB_HOST=0.0.0.0
# 启用 Web 界面
ENABLE_WEB_UI=true

# ============ MQTT 配置 ============
# MQTT 代理地址
MQTT_BROKER=localhost
# MQTT 代理端口
MQTT_PORT=1883
# MQTT 用户名
MQTT_USERNAME=
# MQTT 密码
MQTT_PASSWORD=
# MQTT 主题前缀
MQTT_TOPIC_PREFIX=butler

# ============ 语音识别配置 ============
# 使用的语音识别引擎: faster-whisper, openai-whisper
ASR_ENGINE=faster-whisper
# Whisper 模型大小: tiny, base, small, medium, large-v3
WHISPER_MODEL=base
# 采样率
SAMPLE_RATE=16000

# ============ 语音合成配置 ============
# Piper TTS 模型路径
PIPER_MODEL_PATH=models/piper/zh_CN-xiaoyan-medium.onnx
# 语音合成采样率
TTS_SAMPLE_RATE=22050

# ============ 摄像头配置 ============
# 摄像头设备索引 (0 表示第一个摄像头)
CAMERA_INDEX=0
# 人脸识别模型
FACE_RECOGNITION_MODEL=vggface
# YOLO 模型路径
YOLO_MODEL_PATH=models/yolo/yolov8n.pt

# ============ 自动化配置 ============
# 自动化引擎轮询间隔 (秒)
AUTOMATION_POLL_INTERVAL=5
# 目标引擎轮询间隔 (秒)
GOAL_ENGINE_POLL_INTERVAL=10

# ============ 技能系统配置 ============
# 技能目录路径
SKILLS_DIR=butler/skills
# 启用的技能 (逗号分隔)
ENABLED_SKILLS=weather,time,music,light

# ============ 安全配置 ============
# 启用 API 速率限制
ENABLE_RATE_LIMIT=true
# API 速率限制 (每分钟请求数)
RATE_LIMIT_PER_MINUTE=60
# 允许的 CORS 源 (逗号分隔，* 表示允许所有)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8000

# ============ 性能配置 ============
# 向量搜索最大结果数
VECTOR_SEARCH_LIMIT=10
# 向量搜索最小相似度分数
VECTOR_SEARCH_MIN_SCORE=0.5
# 内存缓存大小
MEMORY_CACHE_SIZE=1000
# 错误记录最大数量
ERROR_RECORD_MAX=1000

# ============ 开发/调试配置 ============
# 开发模式 (启用详细日志和调试功能)
DEBUG_MODE=false
# 启用性能分析
ENABLE_PROFILING=false
# 分析输出目录
PROFILING_OUTPUT_DIR=profiling
